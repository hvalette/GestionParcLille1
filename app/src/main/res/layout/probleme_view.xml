<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/shadow"
              android:layout_width="match_parent"
              android:layout_height="100dp">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/probleme_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/latitude"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/description"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/type"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:id="@+id/type"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/item_id"
                        android:layout_marginStart="8dp" android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/longitude"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/type" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/description" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/latitude" app:layout_constraintHorizontal_bias="0.048"
                        app:layout_constraintVertical_bias="0.333"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:id="@+id/description"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.788"
                        android:layout_marginBottom="4dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/item_id" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>